{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Performers Schema",
  "description": "Schema for GET /api/performers endpoint - list of all performers",
  "type": "object",
  "required": ["data", "count"],
  "properties": {
    "data": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["id", "name", "genre", "country"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^p[0-9]+$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "genre": {
            "type": "string",
            "minLength": 1
          },
          "country": {
            "type": "string",
            "minLength": 1
          },
          "image": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },
    "count": {
      "type": "integer",
      "minimum": 0
    },
    "pagination": {
      "type": "object",
      "properties": {
        "page": { "type": "integer", "minimum": 1 },
        "pageSize": { "type": "integer", "minimum": 1 },
        "totalPages": { "type": "integer", "minimum": 1 }
      }
    }
  }
}
