{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Venue Detail Schema",
  "description": "Schema for GET /api/venues/{id} endpoint - single venue details",
  "type": "object",
  "required": ["id", "name", "address", "capacity"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^v[0-9]+$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "address": {
      "type": "string",
      "minLength": 1
    },
    "capacity": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100000
    },
    "stages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "capacity", "type"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^s[0-9]+$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "capacity": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100000
          },
          "type": {
            "type": "string",
            "enum": ["outdoor", "indoor", "pavilion"]
          }
        }
      }
    }
  }
}
